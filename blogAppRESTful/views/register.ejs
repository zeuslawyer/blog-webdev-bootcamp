<% include ./partials/header.ejs %>

<div class="new main text container segment form">
    <h1 >SIGN UP FOR AN ACCOUNT</h1>

    <form action="/register" method="POST">
        <div class="ui mini form">
            <div class="two fields">
                <div class="field">
                    <label>Email</label>
                    <input placeholder="Your email is your username" type="email" name="username" required>
                </div>
                <div class="field">
                    <label>Display Name</label>
                    <input placeholder="Choose your display name" type="text" name="displayName" required>
                </div>
                <div class="field">
                    <label>Password</label>
                    <input placeholder="password" type="password" name="password" required>
                </div>
            </div>
            <button class="ui submit button blue">Submit</button>
        </div>
    </form>

    